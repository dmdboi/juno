{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "outputLogs": "full",
            "dependsOn": [
                "^dev"
            ],
            "persistent": true
        }
    },
    "ui": "tui"
}